
# Model Selection: "bedrock" or "local"
MODEL_TYPE=local

# AWS Bedrock Configuration (Required if MODEL_TYPE=bedrock)
AWS_REGION=eu-west-3
BEDROCK_MODEL_ID=eu.amazon.nova-pro-v1:0
BEDROCK_EMBEDDING_MODEL_ID=amazon.titan-embed-text-v2:0

# Local Model Configuration (Required if MODEL_TYPE=local)
LOCAL_LLM_MODEL=llama3
LOCAL_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Vector Database
VECTOR_DB_DIR=./chroma_vectorestore
COLLECTION_NAME=air_india_collection

# Ingestion Settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
